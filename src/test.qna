options education(age: integer) {
  wo: "Wetenschappelijk onderwijs"
  hbo: "Hoger beroepsonderwijs"
  mbo: "Middelbaar beroepsonderwijs" when age < 16
}

options sex() {
  male: "Male"
  female: "Female"
  other: "Other"
}

def main() {
  doc "This form collects information on children."
  group "Kids" {
	  "Do you have kids?" hasKids: check
	  if (hasKids) {
	    "How many?" numOfKids: text
	    kids: repeat(numOfKids) {
	      list {
		     item { "Enter name: " name: text }
		     item { "Enter sex: " sex: one-of sex() }
		     item { "Enter age: " age: range(0..100) }
		     if (age > 18) {
		        item { "BSN number: " bsn: pic("### ###") }
		        item { "Driver's license?" dl: check }
		     }
		     item { "What is the education?" edu: more-of education(age) }
		  }
	    }
	    "Total age of kids: " $sum(k.age | k in kids)
	    if (avg(k.age | k in kids) > 18) 
	      "They could be all adults"
	  }
  }
}